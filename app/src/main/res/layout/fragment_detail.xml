<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8FBCB"
    tools:context=".Detail">

    <TextView
        android:id="@+id/tvWeather"
        android:layout_width="230dp"
        android:layout_height="32dp"
        android:layout_marginStart="40dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imgDetail"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvSeedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/back"
        android:fontFamily="@font/amita"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Semilla"
        android:textAlignment="viewStart"
        android:textColor="#FDFCFB"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imgDetail"
        app:layout_constraintTop_toTopOf="@+id/imgDetail" />

    <ImageView
        android:id="@+id/imgBarDetail"
        android:layout_width="380dp"
        android:layout_height="75dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/back_stroke"
        app:layout_constraintEnd_toEndOf="@+id/imgDetail"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/imgDetail"
        app:layout_constraintTop_toTopOf="@+id/imgDetail" />

    <TextView
        android:id="@+id/tvTitleTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Temperatura"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvTemp"
        app:layout_constraintStart_toStartOf="@+id/tvTemp"
        app:layout_constraintTop_toTopOf="@+id/imgBarDetail" />

    <TextView
        android:id="@+id/tvTitleSun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tipo Sol"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvSun"
        app:layout_constraintStart_toStartOf="@+id/tvSun"
        app:layout_constraintTop_toTopOf="@+id/imgBarDetail" />

    <TextView
        android:id="@+id/tvTitleWather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tipo Riego"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvWather"
        app:layout_constraintStart_toStartOf="@+id/tvWather"
        app:layout_constraintTop_toTopOf="@+id/imgBarDetail" />

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imgBarDetail"
        app:layout_constraintEnd_toStartOf="@+id/tvSun"
        app:layout_constraintStart_toStartOf="@+id/imgBarDetail" />

    <TextView
        android:id="@+id/tvSun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imgBarDetail"
        app:layout_constraintEnd_toEndOf="@+id/imgBarDetail"
        app:layout_constraintStart_toStartOf="@+id/imgBarDetail" />

    <TextView
        android:id="@+id/tvWather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imgBarDetail"
        app:layout_constraintEnd_toEndOf="@+id/imgBarDetail"
        app:layout_constraintStart_toEndOf="@+id/tvSun" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Clima favorable:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imgBarDetail"
        app:layout_constraintTop_toBottomOf="@+id/imgBarDetail" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tipo de suelo:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Profundidad semilla:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tipo fertilizante :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Distancia entre ellas :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TamaÃ±o maceta :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Plantas amigas :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Plantas No amigas :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Plagas :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/tvSubstratum"
        android:layout_width="230dp"
        android:layout_height="32dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/tvWeather"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/tvDepth"
        android:layout_width="230dp"
        android:layout_height="32dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/tvSubstratum"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/tvFertilizer"
        android:layout_width="230dp"
        android:layout_height="32dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/tvDepth"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="230dp"
        android:layout_height="32dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/tvFertilizer"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <TextView
        android:id="@+id/tvPot"
        android:layout_width="230dp"
        android:layout_height="32dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/tvDistance"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <TextView
        android:id="@+id/tvFriends"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/tvDistance"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <TextView
        android:id="@+id/tvNonFriends"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/tvFriends"
        app:layout_constraintTop_toTopOf="@+id/textView11" />

    <TextView
        android:id="@+id/tvDiseases"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/tvNonFriends"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <include
        android:id="@+id/include"
        layout="@layout/menuarroz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>