<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".CalendarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeaderCalendar"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/header_background"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imgTitleCalendar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitleCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/back"
            android:fontFamily="@font/amita"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/calendar_title"
            android:textColor="@color/colorLight"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/back_stroke"
        android:padding="4dp"
        android:text="Listar Todo"
        android:textColor="@color/colorLight"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeaderCalendar" />

    <include
        android:id="@+id/include"
        layout="@layout/menuarroz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/back_stroke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAll">

        <TextView
            android:id="@+id/tvEne"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:shadowColor="@color/colorGray"
            android:shadowRadius="12"
            android:text="Ene"
            android:textColor="@color/colorLight"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/tvFeb"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:shadowColor="@color/colorGray"
            android:shadowRadius="12"
            android:text="Feb"
            android:textColor="@color/colorLight"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/tvMar"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:shadowColor="@color/colorGray"
            android:shadowRadius="12"
            android:text="Mar"
            android:textColor="@color/colorLight"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="0" />

        <TextView
            android:id="@+id/tvAbr"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:shadowColor="@color/colorGray"
            android:shadowRadius="12"
            android:text="Abr"
            android:textColor="@color/colorLight"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/tvMay"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:shadowColor="@color/colorGray"
            android:shadowRadius="12"
            android:text="May"
            android:textColor="@color/colorLight"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/tvJun"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:shadowColor="@color/colorGray"
            android:shadowRadius="12"
            android:text="Jun"
            android:textColor="@color/colorLight"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="1" />

        <TextView
            android:id="@+id/tvJul"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:shadowColor="@color/colorGray"
            android:shadowRadius="12"
            android:text="Jul"
            android:textColor="@color/colorLight"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/tvAgo"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:shadowColor="@color/colorGray"
            android:shadowRadius="12"
            android:text="Ago"
            android:textColor="@color/colorLight"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/tvSep"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:shadowColor="@color/colorGray"
            android:shadowRadius="12"
            android:text="Sep"
            android:textColor="@color/colorLight"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="2" />

        <TextView
            android:id="@+id/tvOct"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:shadowColor="@color/colorGray"
            android:shadowRadius="12"
            android:text="Oct"
            android:textColor="@color/colorLight"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/tvNov"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:shadowColor="@color/colorGray"
            android:shadowRadius="12"
            android:text="Nov"
            android:textColor="@color/colorLight"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="3" />

        <TextView
            android:id="@+id/tvDic"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:shadowColor="@color/colorGray"
            android:shadowRadius="12"
            android:text="Dic"
            android:textColor="@color/colorLight"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
